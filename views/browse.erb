<%= partial :header %>
<div id="content">
  <div class="container clearfix dark">
    <div class="clearfix shaded-panel has-sidebar main-panel-is-dark">
      <div class="page-head short">
      </div>

      <div class="clearfix twelve columns">
        <div class="browse-search">

              <h1> <%= t('search') %> </h1>
              <div class="clearfix searchbox">
                <div class="clearfix" id="search-form">
                  <%= partial :search_form %>
              </div>
            </div>
        </div>

        <div class="browse-by-type">
          <%#<h1>View By Type</h1>%>
          <div class="twelve-columns clearfix">
            <% @object.browse_entries.each_slice(3) do |slice| %>
              <% slice.each_with_index do |(genre, image), idx| %>
                <div class="four columns <%= 'omega' if idx == 2 %>">
                  <a href="<%= loopback(lang: @lang).update_filter("genres_#{@lang}".to_sym, genre.name).to_url %>">
                    <img src="<%= image %>" alt="<%= genre.name %>" />
                    <span><%= genre.name %></span>
                  </a>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div id="browse-bar" class="four columns">
        <h1><%= t('browse') %></h1>
        <h3 class="has-children active first"><a href="#"><%= t('indexes') %></a></h3>
        <div class="list">
          <ul class="default">
            <li>
            <a href="<%= SEARCH_BASE_URL %>/<%= @lang %>/genres.html"><span class="icon">l</span><%= t('genre') %></a>
            </li>
            <li>
            <a href="<%= SEARCH_BASE_URL %>/<%= @lang %>/people"><span class="icon">g</span><%= t('people') %></a>
            </li>
            <li>
            <a href="<%= SEARCH_BASE_URL %>/<%= @lang %>/places"><span class="icon">@</span><%= t('place') %></a>
            </li>
            <li>
            <a href="<%= SEARCH_BASE_URL %>/<%= @lang %>/subjects"><span class="icon">n</span><%= t('subject') %></a>
            </li>
          </ul>
        </div>

        <h3 class="has-children active"><a href="#"><%= t('periods') %></a></h3>
        <div class="list">
          <ul class="default">
            <% Period.all.each do |period| %>
              <%# this is presently toast due to lack of proper modelling %>
              <li> 
              <a href="<%= loopback(lang: @lang).from(period.start_at).to(period.end_at).to_url %>">
                <%= period.send("title_#{@lang}") %>
              </a> 
              </li>
            <% end %>
          </ul>
        </div>

        <h3 class="last">
          <a href="/<%= @lang %>/collections/manifest.html">
            <span class="icon">P</span>
            <%= t('collections') %>
          </a>
        </h3>

        <%#<h3><a href="/archive/collections" ><span class="icon">></span> Translations</a></h3>%>
        <%#<h3 class="last"><a href="/archive/collections" ><span class="icon">'</span> Recent Additions</a></h3>%>
      </div>
    </div>
  </div>
</div>
<%= partial :footer %>
