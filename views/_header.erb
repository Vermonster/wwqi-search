<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Women's Worlds in Qajar Iran | <%= @object.title if @object.respond_to?(:title) && @object.try(:title) %></title>
	<meta name="description" content="The archive contains manuscripts, pictures, sound files relating to the history of women in Qajar Iran." />
	<meta name="author" content="Women's World in Qajar Iran">

	<!-- facebook metatags 
	================================================== -->
	<meta property="og:site_name" content="Women's Worlds in Qajar Iran"/>

  <% if @object.respond_to?(:title) && @object.try(:title) %> 
    <meta property="og:title" content="<%= @object.title %>" />
  <% end %>

  <% if @object.respond_to?(:thumbnail) && @object.try(:thumbnail) %>
    <meta property="og:image" content="<%= @object.thumbnail %>" />
    <link rel="image_src" href="<%= @object.thumbnail %>" />
  <% end %>

  <!-- CSS 
  ================================================== -->

  <!-- Skeleton Stuff -->
  <%= stylesheet "base"          %>
  <%= stylesheet "skeleton"      %>
  <%= stylesheet "layout"        %>
  <%  if @lang.to_sym == :fa     %>
  <%=   stylesheet "skeleton_fa" %>
  <%=   stylesheet "layout_fa"   %>
  <%  end                        %>

  <!-- WWQI -->
  <%= stylesheet "style", media: "screen", type: "text/css" %> 

	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>

  <%= javascript "jquery.ui.widget.min" %>
  <%= javascript "AudioPlayerV1" %>

  <%= stylesheet "audioplayer" %>
  <%= stylesheet "pictos", charset: "utf-8", type: "text/css" %>

  <%= javascript "responsiveslides" %>
  <%= javascript "jquery.elastislide" %>
  <%= javascript "jquery.easing.1.3" %>

  <%= stylesheet "responsiveslides" %>
  <%= stylesheet "elastislide" %>

	<!-- Favicons
	================================================== -->
	<link rel="shortcut icon" href="images/favicon.ico">
	<link rel="apple-touch-icon" href="images/apple-touch-icon.png">
	<link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
	<link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">

</head>
