<%= partial "header" %>
<div id="content">
  <div class="container clearfix">
    <div class="clearfix shaded-panel" id="indexList">

      <div class="page-head">
        <div class="otherIndexes">
          <a href="<%= "/#{@lang}/genres.html" %>">  <%= t('genres') %>  </a>
          <a href="<%= "/#{@lang}/people.html" %>">  <%= t('people') %>  </a>
          <a href="<%= "/#{@lang}/places.html" %>">  <%= t('places') %>  </a>
          <a href="<%= "/#{@lang}/subjects.html" %>"><%= t('subjects') %></a>
        </div>
        <h2><%= @type.capitalize %> Index</h2>
        <ul class="alphabet">
          <% ('A'..'Z').each do |letter| %>
            <li>
            <%= lang_link_to(letter, "#{@type}.html?letter=#{letter}", lang: @lang) %>
            </li>
          <% end %>
          <li>
          <%= lang_link_to("Ê»", "#{@type}.html?letter=%CA%BB", lang: @lang) %>
          </li>
          <li>
          <%= lang_link_to("ALL", "#{@type}.html", lang: @lang) %>
          </li>
        </ul>
      </div>
      <%
          column_2 = @content.slice!((@content.size/2.0).round..@content.size)
        %>
      <div class="sixteen columns clearfix offset-by-one">
        <ul class="subjects_list seven columns alpha">
          <% @content.sort_by{|name, count| name}.each do |name, count| %>
            <li class="person_item">
            <a href="<%= loopback(lang: @lang).update_filter("#{@type.downcase}_#{@lang}".to_sym, name).to_url %>"><%= name %> <span>(<%= count %>)</span></a>
            </li>
          <% end %>
        </ul>
        <ul class="subjects_list seven columns alpha">
          <% column_2.sort_by{|name, count| name}.each do |name, count| %>
            <li class="person_item">
            <a href="<%= loopback(lang: @lang).update_filter("#{@type}_#{@lang}".to_sym, name).to_url %>"><%= name %> <span>(<%= count %>)</span></a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<%= partial "footer" %>
